.user
  margin-bottom 10px

  &__pic
    width 100px
    height 100px
    float left
    margin-right 20px

    img
      width 100px
      border-radius 50%

  &__name
    color #333
    display block

  &__likes
    height 80px
    display block

  &__like
    width 80px
    height 80px
    display inline-block
    vertical-align middle
    background url("data:image/png;base64,") no-repeat 0 0
    cursor pointer

    &:hover, &_liked
      background-position 0 -80px

  &__likes-count
    position relative
    font-size 2.5em
    display inline-block
    vertical-align middle

  &__video
    cursor pointer
    display block
    width 100px
    height 100px
    background url(../img/user/video-play.png)